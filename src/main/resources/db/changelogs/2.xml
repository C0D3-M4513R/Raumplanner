<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="1" author="C0D3_M4513R">
        <createTable tableName="Color">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="Color" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="Value" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="F_Group">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
        </createTable>

        <createTable tableName="Furniture_Settings" >
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="Cost" type="currency"/>
            <column name="DType" type="VARCHAR"/>
            <column name="Name" type="VARCHAR"/>
            <column name="Width" type="double"/>
            <column name="Length" type="double">
                <constraints nullable="true"/>
            </column>
            <column name="isBigRound" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="Persons" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="imgUrl" type="VARCHAR"/>
        </createTable>


        <createTable tableName="Furniture">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="colorId" type="bigint" defaultValueNumeric="0" >
                <constraints deleteCascade="false"
                             referencedTableName="Color"
                             referencedColumnNames="id"
                             foreignKeyName="fk_Furniture_Color"
                             />
            </column>
            <column name="furnitureType" type="bigint">
                <constraints deleteCascade="true"
                             referencedTableName="Furniture_Settings"
                             referencedColumnNames="id"
                             foreignKeyName="fk_Furniture_Furniture_Settings"
                />
            </column>
            <column name="posx" type="int"/>
            <column name="posy" type="int"/>
            <column name="attached" type="bigint">
                <constraints deleteCascade="false"
                             foreignKeyName="Big_Billy_Group"
                             referencedTableName="F_Group"
                             referencedColumnNames="id"
                             nullable="true"
                />
            </column>
            <column name="groupId" type="bigint">
                <constraints deleteCascade="true"
                             foreignKeyName="fk_Group_Furniture"
                             referencedTableName="F_Group"

                             referencedColumnNames="id"
                />
            </column>
        </createTable>
        <createTable tableName="Rooms">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar"/>
            <column name="no" type="bigint">
                <constraints unique="true"/>
            </column>
            <column name="width" type="int"/>
            <column name="height" type="int"/>
        </createTable>
        <createTable tableName="Rooms_Furniture">
            <column name="Roomid" type="bigint">
                <constraints deleteCascade="true"
                             referencedTableName="Rooms"
                             referencedColumnNames="id"
                             foreignKeyName="fk_room_Furniture_room"
                />
            </column>
            <column name="FurnitureId" type="bigint">
                <constraints deleteCascade="true"
                             referencedColumnNames="id"
                             referencedTableName="Furniture"
                             foreignKeyName="fk_Rooms_Furniture_Furniture"
                />
            </column>
        </createTable>
    </changeSet>
